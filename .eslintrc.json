{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb", "prettier", "prettier/react"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react", "import"],
    "rules": {
        "linebreak-style": "off",
        "react/jsx-filename-extension": [
            "error",
            { "extensions": [".js", ".jsx"] }
        ],
        "camelcase": ["error", { "properties": "never" }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["resources/js"]
            },
            "babel-module": {}
        }
    }
}
